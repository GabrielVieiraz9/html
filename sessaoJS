    <script>
        document.getElementById("demo").innerHTML = "Meu primeiro Script";

        let x = 16 + " Fiat - Uno Mille";
        document.getElementById("demo2").innerHTML = x;

        function minhaFuncao(p1,p2){
            return p1 * p2;
        }

        let resultado = minhaFuncao(5, 10);
        document.getElementById("demo").innerHTML = resultado;

    </script>
    <button type="button" onclick='document.getElementById("demo").innerHTML = "Olá Mundo JavaScript"'>Clique Aqui</button>
    
    <script>
       //criando um objeto
       const pessoa = {
        primeiroNome: "Gabriel",
        ultimoNome: "Vieira",
        idade: 26,
        corDosOlos: "castanho",
        nomeCompleto: function(){
            return this.primeiroNome + " " + this.ultimoNome;
        }
       };

       document.getElementById("demo").innerHTML = pessoa.nomeCompleto() + " tem "+ pessoa.idade +" anos de vida...";
    </script>
    <button type="button" onclick='document.getElementById("demo").innerHTML = Date()'>A data é: </button>

